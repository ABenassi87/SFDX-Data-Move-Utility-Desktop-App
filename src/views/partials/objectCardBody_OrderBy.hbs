<!--WHERE-->
<div class="form-row">
    <div class="form-group col-md-12 object-param-edit">
        <label>
            <i class="fa fa-edit text-info" ng-click="showParamEditorField(object, 'orderBy')" data-toggle="tooltip"
                title="Edit this value"></i>&nbsp;
            Query ORDER BY:
            <i class="fa fa-question-circle" data-toggle="tooltip"
                title="The ORDER BY SOQL clause that will be applied to select the source records."></i>
        </label>
        <span class="value text-primary">
            {[{object.extraData.orderBy || '** NO ORDER **'}]}
        </span>

        <div class="object-param-edit-field card" ng-show="object.paramsVisibility['orderBy']">
            <div class="card-body">
                <textarea placeholder="Enter the ORDER BY expression" class="form-control"
                    ng-model="object.extraData.orderBy">
                                                                </textarea>
            </div>
            <div class="card-footer">
                <button type="button" class="btn btn-primary btn-sm" ng-click="updateParamEditorField(object, 'orderBy')">
                    Update
                </button>
                <button type="button" class="btn btn-danger btn-sm"
                    ng-click="cancelUpdateParamEditorField(object, 'orderBy')">
                    Cancel
                </button>
            </div>
        </div>
    </div>
</div>